{
    "require": {
        "php": ">=7.1",
        "ext-PDO": "^7.4",
        "ext-json": "*",
        "illuminate/database": "^7.5",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0",
        "selective/array-reader": "^0.3.0",
        "selective/config": "^0.2.0",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
